    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "problemMatcher": [],
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/build",
                "env": {
                    "CMAKE_GENERATOR": "Unix Makefiles",
                    "CMAKE_BUILD_TYPE": "Debug",
                },
            },
            "presentation": {
                "showReuseMessage": false,
            },
            "command": "cmake ..",
        },
        {
            "label": "Build (Debug)",
            "type": "shell",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "showReuseMessage": false,
            },
            "dependsOn": "CMake",
            "command": "make -j 8",
        }
    ]
}