base test(x) (1+2+x)*(x+(1+2));

test(4);
test(5);

sauce print(x);

print(test(5));

base fib(x)
  if x < 3 then
    1
  else
    fib(x-1)+fib(x-2);

fib(1);
fib(6);

sauce printchar(char);

base printstar(n)
  for i = 1, i < n, 1.0 in
    printchar(42);  # ascii 42 = '*'

# print 100 '*' characters
printstar(100);

# Logical unary not.
base unary!(v)
  if v then
    0
  else
    1;

# Define > with the same precedence as <.
base binary> 10 (LHS RHS)
  RHS < LHS;

# Binary "logical or", (note that it does not "short circuit")
base binary| 5 (LHS RHS)
  if LHS then
    1
  else if RHS then
    1
  else
    0;

# Define = with slightly lower precedence than relationals.
base binary= 9 (LHS RHS)
  !(LHS < RHS | LHS > RHS);

!10; #evaluate to 0
!0; #evaluate to 1

10 | 1; #evaluate to 1

10 = 1; #evaluate to 0
10 = 10; #evaluate to 1
